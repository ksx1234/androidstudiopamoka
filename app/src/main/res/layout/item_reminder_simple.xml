<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@android:color/transparent"
    android:gravity="center_vertical"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/tvReminderInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Reminder set for Jan 1, 2024 at 14:30"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="@drawable/reminder_yellow_background"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:layout_marginEnd="16dp" /> <!-- Added space between reminder and button -->

    <Button
        android:id="@+id/btnDeleteReminder"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="X"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="@android:color/holo_red_dark"
        android:padding="8dp" />

</LinearLayout>